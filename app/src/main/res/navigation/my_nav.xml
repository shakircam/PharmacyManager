<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_salesFragment"
            app:destination="@id/salesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_reportFragment"
            app:destination="@id/reportFragment" />
        <action
            android:id="@+id/action_homeFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/salesFragment"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.SalesFragment"
        android:label="Purchase"
        tools:layout="@layout/fragment_sales" >
        <action
            android:id="@+id/action_salesFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
        <action
            android:id="@+id/action_salesFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_salesFragment_to_purchaseCartFragment"
            app:destination="@id/purchaseCartFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.NoteFragment"
        android:label="Note"
        tools:layout="@layout/fragment_note" >
        <action
            android:id="@+id/action_noteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.ReportFragment"
        android:label="Report"
        tools:layout="@layout/fragment_report" >
        <action
            android:id="@+id/action_reportFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/medicine"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.MedicineListFragment"
        android:label="Medicine"
        tools:layout="@layout/fragment_medicine_list" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/cart"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.CartFragment"
        android:label="Cart List"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.RegistrationFragment"
        android:label="Registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/stock"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.StockFragment"
        android:label="Stock List"
        tools:layout="@layout/fragment_stock" />
    <fragment
        android:id="@+id/purchaseCartFragment"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.PurchaseCartFragment"
        android:label="Purchase Cart"
        tools:layout="@layout/fragment_purchase_cart" >
        <action
            android:id="@+id/action_purchaseCartFragment_to_salesFragment"
            app:destination="@id/salesFragment" />
    </fragment>
    <fragment
        android:id="@+id/profile"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profile_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profile_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.itmedicus.pharmacymanager.ui.fragment.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/action_editProfileFragment_to_profile"
            app:destination="@id/profile" />
    </fragment>
</navigation>